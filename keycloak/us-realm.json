{
  "realm": "us-realm",
  "enabled": true,
  "displayName": "US Region",
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "verifyEmail": false,
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user role"
      }
    ],
    "client": {
      "us-api": [
        {
          "name": "api-user",
          "description": "API user role"
        }
      ]
    }
  },
  "defaultRoles": [
    "user"
  ],
  "clients": [
    {
      "clientId": "us-react-app",
      "name": "US React Application",
      "enabled": true,
      "publicClient": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "protocol": "openid-connect",
      "rootUrl": "http://localhost:3000",
      "baseUrl": "http://localhost:3000",
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000"
      ],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:3000/*"
      },
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "us-api",
      "name": "US API Server",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    },
    {
      "clientId": "eu-keycloak-broker",
      "name": "EU Keycloak Broker Client",
      "description": "Client used by EU Keycloak to broker authentication from US Keycloak",
      "enabled": true,
      "publicClient": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "protocol": "openid-connect",
      "secret": "us-broker-secret-for-eu",
      "redirectUris": [
        "http://localhost:8081/realms/eu-realm/broker/us-keycloak-idp/endpoint/*"
      ],
      "webOrigins": [
        "http://localhost:8081"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ]
    }
  ],
  "identityProviders": [
    {
      "alias": "eu-keycloak-idp",
      "displayName": "Login with EU Keycloak",
      "providerId": "oidc",
      "enabled": true,
      "trustEmail": true,
      "storeToken": false,
      "linkOnly": false,
      "firstBrokerLoginFlowAlias": "Auto Link First Broker Login",
      "config": {
        "clientId": "us-keycloak-broker",
        "clientSecret": "eu-broker-secret-for-us",
        "tokenUrl": "http://keycloak-eu:8080/realms/eu-realm/protocol/openid-connect/token",
        "authorizationUrl": "http://localhost:8081/realms/eu-realm/protocol/openid-connect/auth",
        "logoutUrl": "http://localhost:8081/realms/eu-realm/protocol/openid-connect/logout",
        "jwksUrl": "http://keycloak-eu:8080/realms/eu-realm/protocol/openid-connect/certs",
        "issuer": "http://localhost:8081/realms/eu-realm",
        "userInfoUrl": "http://keycloak-eu:8080/realms/eu-realm/protocol/openid-connect/userinfo",
        "validateSignature": "true",
        "useJwksUrl": "true",
        "clientAuthMethod": "client_secret_post",
        "syncMode": "FORCE",
        "defaultScope": "openid email profile",
        "hideOnLoginPage": "true"
      }
    }
  ],
  "identityProviderMappers": [
    {
      "name": "email-mapper",
      "identityProviderAlias": "eu-keycloak-idp",
      "identityProviderMapper": "oidc-user-attribute-idp-mapper",
      "config": {
        "syncMode": "INHERIT",
        "claim": "email",
        "user.attribute": "email"
      }
    },
    {
      "name": "first-name-mapper",
      "identityProviderAlias": "eu-keycloak-idp",
      "identityProviderMapper": "oidc-user-attribute-idp-mapper",
      "config": {
        "syncMode": "INHERIT",
        "claim": "given_name",
        "user.attribute": "firstName"
      }
    },
    {
      "name": "last-name-mapper",
      "identityProviderAlias": "eu-keycloak-idp",
      "identityProviderMapper": "oidc-user-attribute-idp-mapper",
      "config": {
        "syncMode": "INHERIT",
        "claim": "family_name",
        "user.attribute": "lastName"
      }
    },
    {
      "name": "username-mapper",
      "identityProviderAlias": "eu-keycloak-idp",
      "identityProviderMapper": "oidc-username-idp-mapper",
      "config": {
        "syncMode": "INHERIT",
        "template": "${CLAIM.preferred_username}"
      }
    }
  ],
  "authenticationFlows": [
    {
      "alias": "Auto Link First Broker Login",
      "description": "Automatically links brokered users without prompting",
      "providerId": "basic-flow",
      "topLevel": true,
      "builtIn": false,
      "authenticationExecutions": [
        {
          "authenticator": "idp-create-user-if-unique",
          "authenticatorFlow": false,
          "requirement": "ALTERNATIVE",
          "priority": 10
        },
        {
          "authenticator": "idp-auto-link",
          "authenticatorFlow": false,
          "requirement": "ALTERNATIVE",
          "priority": 20
        }
      ]
    }
  ],
  "users": [
    {
      "username": "us-user",
      "enabled": true,
      "email": "ususer@demo.com",
      "emailVerified": true,
      "firstName": "US",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "user"
      ],
      "clientRoles": {
        "us-api": [
          "api-user"
        ]
      }
    }
  ]
}